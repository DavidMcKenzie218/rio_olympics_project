<h2 class="athlete_header">Edit <%= @athlete.name %></h2>

<form action="/athletes/<%= @athlete.id %>" method="post">
  
<label class="athlete_name_label" for="name">Name: </label>
<input class="athlete_input_text" type="text" name="name" value="<%= @athlete.name %>">

<label class="athlete_name_label" for="nation_id">Nation: </label>
<select class="athlete_select" name="nation_id">
  <% @nations.each do |nation| %>
  <option value="<%= nation.id  %>" <%= 'selected' if nation.id ==  @athlete.nation_id %>><%= nation.name %></option>
  <% end %>
</select>

<label class="athlete_name_label" for="event_id">Event: </label>
<select class="athlete_select" name="event_id">
  <% @events.each do |event| %>
  <option value="<%= event.id %>" <%= 'selected' if event.id == @athlete.event_id %>><%= event.name %></option>
  <% end %>
</select>


<label class="athlete_name_label" for="event_time">Event Time: </label>
<input class="athlete_input_text" type="number" step="0.01" name="event_time" value="<%= @athlete.event_time %>">

<input class="athlete_submit" type="submit" name="edit" value="Edit the Athlete">

</form>